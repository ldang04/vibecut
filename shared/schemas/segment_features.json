{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SegmentFeatures",
  "type": "object",
  "properties": {
    "segment_id": {
      "type": "integer",
      "description": "Unique identifier for the segment"
    },
    "start": {
      "type": "integer",
      "description": "Start time in ticks (48000 ticks per second)"
    },
    "end": {
      "type": "integer",
      "description": "End time in ticks"
    },
    "transcript": {
      "type": "string",
      "description": "Transcript text"
    },
    "words": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": { "type": "number" },
          "end": { "type": "number" },
          "word": { "type": "string" }
        },
        "required": ["start", "end", "word"]
      }
    },
    "has_face": {
      "type": "boolean",
      "description": "Whether a face is detected in this segment"
    },
    "face_bbox": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "width": { "type": "number" },
        "height": { "type": "number" }
      }
    },
    "blur_score": {
      "type": "number",
      "description": "Blur detection score (higher = less blur)"
    },
    "motion_score": {
      "type": "number",
      "description": "Motion estimation score"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Scene tags (e.g., 'indoors', 'outdoors', 'day', 'night')"
    },
    "audio_energy": {
      "type": "number",
      "description": "Audio energy level"
    },
    "scores": {
      "type": "object",
      "properties": {
        "clarity": { "type": "number" },
        "story": { "type": "number" },
        "broll": { "type": "number" },
        "style_fit": { "type": "number" }
      }
    }
  },
  "required": ["segment_id", "start", "end"]
}
