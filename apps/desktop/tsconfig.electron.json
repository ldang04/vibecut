{
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "./dist-electron",
    "noEmit": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/main/electron.ts"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}
